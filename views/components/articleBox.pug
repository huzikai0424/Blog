each item in res
        article
            .article-box
                .card-thumb
                    //- img(src="images/1.jpg" alt="thumb")
                h2.article-title #[a(href=`/article/${item.id}`)=item.title] 
                p.article-describe!=item.des 
            .article-footer 
                span #{item.postTime}  
                span #{item.views} 次阅读  
                each count in commentCountInfo
                    if count.article_id==item.id
                        span #{count.count} 条评论
                //- span #{item.like} 人点赞 
                .readMove #[a(href=`/article/${item.id}`) 阅读全文]